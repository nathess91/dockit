<div class="container">
<br>
<h5 class="pull-right"><%= Time.now.strftime("%A, %B %d, %Y") %></h5>
<h1 class="dock-it-font"><%= greet %> <%= current_user.first_name %></h1>
<br>
<br>

  <div style="padding-top:0px;" class="well col-xs-12 col-md-6 pull-left">
    <h3>To-Do List</h3>
    <ul class="list-group">
      <% if @tasks.count == 0 %>
        <h5>No tasks...</h5>
      <% else %>
        <% @tasks.take(7).each do |task| %>
          <li class="task list-group-item">
            <% unless !task.is_high_priority == true %>
              <span style="background-color:#d9534f;" class="important badge pull-left">!</span>
            <% end %>

            <%= task.text %>

            <%= link_to task_path(task.id), data: {confirm: "'" + task.text + "'" + " is complete"}, method: :delete  do %>
              <span class="pull-left btn btn-default btn-md" style="margin-right:5px; padding:8px;">
              </span>
            <% end %>
        <% end %>
          </li>
      </ul>
      <button type="button" id="view-tasks" class="btn btn-default pull-left" data-toggle="modal" data-target="#view-tasks-modal">View All Tasks</button>
      <% end %>
      <%= link_to "New Task", new_task_path, :id => 'new-task', class: "btn btn-primary pull-right", "data-toggle" => "modal", 'data-target' => '#new-task-modal' %>
  </div>

    <!-- ASSIGNMENT ICONS -->
    <div style="padding-top:0px;" class="container well col-xs-12 col-md-5 pull-right" id="icons">
      <h3>Assignments</h3>
      <br>
      <div class="row" style="margin-left:2vw;">
        <div id="assigned-icon" class="col-xs-4 col-md-4 clearfix">
          <a href="/assignments#1"><img src="http://i.imgur.com/UC8sFM9.png" width="60em"></a>
        </div>

        <div id="pending-icon" class="col-xs-4 col-md-4 clearfix">
          <a href="/assignments#2"><img src="http://i.imgur.com/t3O1FM5.png" width="60em"></a>
        </div>

        <div id="inprogress-icon" class="col-xs-4 col-md-4 clearfix">
          <a href="/assignments#3"><img src="http://i.imgur.com/7na1sgB.png" width="60em"></a>
        </div>
      </div>
      <br>

      <div class="row" style="margin-left:2vw;">
        <div id="notsold-icon" class="col-xs-4 col-md-4 clearfix">
          <a href="/assignments#4"><img src="http://i.imgur.com/2OVnspZ.png" width="60em"></a>
        </div>

        <div id="completed-icon" class="col-xs-4 col-md-4 clearfix">
          <a href="/assignments#5"><img src="http://i.imgur.com/ohrPQas.png" width="60em"></a>
        </div>

        <div id="closed-icon" class="col-xs-4 col-md-4 clearfix">
          <a href="/assignments#6"><img src="http://i.imgur.com/EkNxtiy.png" width="60em"></a>
        </div>
      </div>

    </div>

<!-- RESOURCES -->
<div class="row pull-right" style="margin-right:2px;">
    <div style="padding-top:0px; width:250px;" class="well col-xs-12 col-sm-3 pull-left">
        <h3>Resources</h3>
        <a href="https://apps.xactware.com/apps/xnportal/welcome.jsp">XactAnalysis</a>
        <br>
        <a href="https://secure.innovationproperty.com/secure/login.aspx">Innovation</a>
        <br>
        <a href="https://buildertrend.com/">BuilderTrend</a>
        <br>
        <a href="https://rms-ngs.net/rms/module/user/login.aspx">RMS</a>
        <br>
        <a href="https://secure.na1.echosign.com/public/login">AdobeSign</a>
        <br>
    </div>
    <div style="padding-top:0px; width:201px; margin-left:20px; color:inherit;" class="well col-xs-12 col-sm-6 pull-right">
      <h3>Bulletin Board</h3>
      <img id="paper-plane" class="shake" src="http://i.imgur.com/yIf8tzQ.png" width="80vw" style="margin-left:2.5vw; margin-top:1.5vh;">
      <br>
      <br>
      <% if current_user.admin? %>
        <%= link_to "View Messages", posts_path, class: "btn btn-primary btn-sm text-center", 'data-toggle' => 'modal', 'data-target' => '#view-posts-modal', style: "width:100%" %>
        <br>
        <br>
        <%= link_to "New Message", new_post_path, class: "btn btn-success btn-sm text-center", 'data-toggle' => 'modal', 'data-target' => '#new-post-modal', style: "width:100%" %>
      <% else %>
        <%= link_to "View Messages", posts_path, class: "btn btn-primary", 'data-toggle' => 'modal', 'data-target' => '#view-posts-modal', style: "width:100%" %>
      <% end %>
    </div>
</div>
</div>

<!-- NEW TASK MODAL -->
<%= render "partials/new_task_modal" %>
